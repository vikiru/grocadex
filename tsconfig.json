{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "target": "ES6",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~assets/*": ["./src/assets/*"],
            "~fonts/*": ["./src/assets/fonts/*"],
            "~utils/*": ["./src/utils/*"],
            "~types/*": ["./src/types/*"],
            "~components/*": ["./src/components/*"],
            "~constants/*": ["./src/constants/*"],
            "~hooks/*": ["./src/hooks/*"],
            "~screens/*": ["./src/screens/*"],
            "~store/*": ["./src/store/*"],
            "~slices/*": ["./src/slices/*"],
            "~api/*": ["./src/api/*"]
        },
        "typeRoots": ["./node_modules/@types", "./types", "./api/types"]
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/app/**/*.ts",
        "api/**/*.ts",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
