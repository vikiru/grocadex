{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "target": "ES6",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./node_modules/@types", "./app/types", "../api/types/"]
    },

    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
