        "checkJs": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./api",
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": ["node_modules/@types", "api/types"]
    }
}
